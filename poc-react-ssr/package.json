{
  "name": "poc-react-ssr",
  "version": "0.0.1",
  "description": "PoC of a React SSR Deno Application",
  "main": "server/server.ts",
  "scripts": {
    "start": "deno run --no-check --allow-net --allow-read --allow-write --watch --unstable --location http://localhost:8000 --config ./tsconfig.json server/server.ts",
    "reload": "deno run --allow-net --allow-read --allow-write --reload --unstable --no-check --location http://localhost:8000 --config ./tsconfig.json server/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["Deno", "React", "SSR", "PoC"],
  "author": "Jelle Biesemans",
  "license": "ISC"
}
